<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>EBS Training</h:title>
    <model>
      <instance>
        <ebs_assessment_training_context delimiter="#" id="ebs_assessment_training_context" prefix="J1!ebs_assessment_training_context!" version="2020-05-04 16:58:03">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <user/>
            <contact>
              <_id/>
            </contact>
          </inputs>
          <patient_id/>
          <ebs_intro>
            <thanking_note/>
          </ebs_intro>
          <ebs_intro_2>
            <thanking_note/>
          </ebs_intro_2>
          <assessment>
            <question_1/>
            <question_1_points/>
            <question_2/>
            <question_2_points/>
          </assessment>
          <assessment_score/>
          <assessment_passed/>
          <module_review>
            <submit/>
            <result/>
            <Fail_1/>
            <Fail_2/>
            <Fail_3/>
            <Success_1/>
            <Success_2/>
          </module_review>
          <meta>
            <instanceID/>
          </meta>
        </ebs_assessment_training_context>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/ebs_assessment_training_context/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/ebs_assessment_training_context/inputs/source" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/inputs/source_id" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/inputs/contact/_id" type="db:person"/>
      <bind calculate="../inputs/contact/_id" nodeset="/ebs_assessment_training_context/patient_id" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/ebs_intro/thanking_note" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/ebs_intro_2/thanking_note" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/assessment/question_1" required="true()" type="select1"/>
      <bind calculate="if(selected(../question_1, 'yes'), 1, 0)" nodeset="/ebs_assessment_training_context/assessment/question_1_points" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/assessment/question_2" required="true()" type="select"/>
      <bind calculate="if(selected(../question_2,'choice1') and selected(../question_2,'choice2') and selected(../question_2,'choice4'), 1, 0)" nodeset="/ebs_assessment_training_context/assessment/question_2_points" type="string"/>
      <bind calculate="int( /ebs_assessment_training_context/assessment/question_1_points ) + int( /ebs_assessment_training_context/assessment/question_2_points )" nodeset="/ebs_assessment_training_context/assessment_score" type="string"/>
      <bind calculate="if( /ebs_assessment_training_context/assessment_score  = 2, 'yes', 'no')" nodeset="/ebs_assessment_training_context/assessment_passed" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/module_review/submit" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/module_review/result" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/module_review/Fail_1" readonly="true()" relevant=" /ebs_assessment_training_context/assessment_score  &lt; 2" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/module_review/Fail_2" readonly="true()" relevant=" /ebs_assessment_training_context/assessment_score  &lt; 2" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/module_review/Fail_3" readonly="true()" relevant=" /ebs_assessment_training_context/assessment_score  &lt; 2" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/module_review/Success_1" readonly="true()" relevant=" /ebs_assessment_training_context/assessment_score  = 2" type="string"/>
      <bind nodeset="/ebs_assessment_training_context/module_review/Success_2" readonly="true()" relevant=" /ebs_assessment_training_context/assessment_score  = 2" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/ebs_assessment_training_context/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/ebs_assessment_training_context/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/ebs_assessment_training_context/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/ebs_assessment_training_context/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/ebs_assessment_training_context/inputs/user">
        <label>User</label>
      </group>
      <group ref="/ebs_assessment_training_context/inputs/contact">
        <label>Contact</label>
        <input appearance="hidden" ref="/ebs_assessment_training_context/inputs/contact/_id">
          <label>_id</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training_context/ebs_intro">
      <label>Event-based Surveillance</label>
      <input ref="/ebs_assessment_training_context/ebs_intro/thanking_note">
        <label>**Thank you for serving your community with event-based surveillance**</label>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training_context/ebs_intro_2">
      <label>Event-based Surveillance</label>
      <input ref="/ebs_assessment_training_context/ebs_intro_2/thanking_note">
        <label>**Lorem ipsum dolor sit amet, consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.**</label>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training_context/assessment">
      <label>Assessment</label>
      <select1 ref="/ebs_assessment_training_context/assessment/question_1">
        <label>Question 1</label>
        <item>
          <label>correct choice</label>
          <value>yes</value>
        </item>
        <item>
          <label>wrong choice</label>
          <value>no</value>
        </item>
      </select1>
      <select ref="/ebs_assessment_training_context/assessment/question_2">
        <label>Question 2</label>
        <item>
          <label>correct choice 1</label>
          <value>choice1</value>
        </item>
        <item>
          <label>correct choice 2</label>
          <value>choice2</value>
        </item>
        <item>
          <label>wrong choice</label>
          <value>choice3</value>
        </item>
        <item>
          <label>correct choice 3</label>
          <value>choice4</value>
        </item>
      </select>
    </group>
    <group appearance="field-list summary" ref="/ebs_assessment_training_context/module_review">
      <label>Module Review</label>
      <input ref="/ebs_assessment_training_context/module_review/submit">
        <label>&lt;h4 style="text-align:center;"&gt;Be sure you Submit to complete this action.&lt;/h4&gt;</label>
      </input>
      <input appearance="h1 blue" ref="/ebs_assessment_training_context/module_review/result">
        <label>Results&lt;i class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/ebs_assessment_training_context/module_review/Fail_1">
        <label>Good start, but you only answered <output value=" /ebs_assessment_training_context/assessment_score "/> out of the 2 questions correctly.</label>
      </input>
      <input ref="/ebs_assessment_training_context/module_review/Fail_2">
        <label>We'll generate another task for you to go through the workflow again.</label>
      </input>
      <input ref="/ebs_assessment_training_context/module_review/Fail_3">
        <label>Thank you for your persistence. Educating ourselves and the community is the best way to stop covid.</label>
      </input>
      <input ref="/ebs_assessment_training_context/module_review/Success_1">
        <label>Great job! You have answered all the questions correctly. Your EBS training is complete!</label>
      </input>
      <input ref="/ebs_assessment_training_context/module_review/Success_2">
        <label>You may now start reporting on households using EBS.</label>
      </input>
    </group>
  </h:body>
</h:html>
