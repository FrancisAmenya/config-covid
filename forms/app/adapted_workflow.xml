  <h:body class="pages">
    <group appearance="field-list" ref="/adapted_workflow/inputs">
      <label ref="jr:itext('/adapted_workflow/inputs:label')"/>
      <input appearance="hidden" ref="/adapted_workflow/inputs/source">
        <label ref="jr:itext('/adapted_workflow/inputs/source:label')"/>
      </input>
      <input appearance="hidden" ref="/adapted_workflow/inputs/source_id">
        <label ref="jr:itext('/adapted_workflow/inputs/source_id:label')"/>
      </input>
      <group ref="/adapted_workflow/inputs/user">
        <label ref="jr:itext('/adapted_workflow/inputs/user:label')"/>
      </group>
      <group ref="/adapted_workflow/inputs/contact">
        <label ref="jr:itext('/adapted_workflow/inputs/contact:label')"/>
        <input appearance="hidden" ref="/adapted_workflow/inputs/contact/_id">
          <label ref="jr:itext('/adapted_workflow/inputs/contact/_id:label')"/>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/adapted_workflow/follow_up_details">
      <label ref="jr:itext('/adapted_workflow/follow_up_details:label')"/>
      <select1 ref="/adapted_workflow/follow_up_details/follow_up_method">
        <label ref="jr:itext('/adapted_workflow/follow_up_details/follow_up_method:label')"/>
        <item>
          <label ref="jr:itext('/adapted_workflow/follow_up_details/follow_up_method/with_ppe:label')"/>
          <value>with_ppe</value>
        </item>
        <item>
          <label ref="jr:itext('/adapted_workflow/follow_up_details/follow_up_method/without_ppe:label')"/>
          <value>without_ppe</value>
        </item>
        <item>
          <label ref="jr:itext('/adapted_workflow/follow_up_details/follow_up_method/by_phone:label')"/>
          <value>by_phone</value>
        </item>
      </select1>
    </group>
    <group appearance="field-list" ref="/adapted_workflow/care_protocol">
      <label ref="jr:itext('/adapted_workflow/care_protocol:label')"/>
      <input ref="/adapted_workflow/care_protocol/care_notes">
        <label ref="jr:itext('/adapted_workflow/care_protocol/care_notes:label')"/>
      </input>
      <input ref="/adapted_workflow/care_protocol/no_ppe_note">
        <label ref="jr:itext('/adapted_workflow/care_protocol/no_ppe_note:label')"/>
      </input>
      <input ref="/adapted_workflow/care_protocol/distancing_note">
        <label ref="jr:itext('/adapted_workflow/care_protocol/distancing_note:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/adapted_workflow/danger_signs">
      <label ref="jr:itext('/adapted_workflow/danger_signs:label')"/>
      <select1 ref="/adapted_workflow/danger_signs/malnutrition">
        <label ref="jr:itext('/adapted_workflow/danger_signs/malnutrition:label')"/>
        <item>
          <label ref="jr:itext('/adapted_workflow/danger_signs/malnutrition/yes:label')"/>
          <value>yes</value>
        </item>
        <item>
          <label ref="jr:itext('/adapted_workflow/danger_signs/malnutrition/no:label')"/>
          <value>no</value>
        </item>
      </select1>
    </group>
    <group appearance="field-list summary" ref="/adapted_workflow/module_review">
      <label ref="jr:itext('/adapted_workflow/module_review:label')"/>
      <input ref="/adapted_workflow/module_review/submit">
        <label ref="jr:itext('/adapted_workflow/module_review/submit:label')"/>
      </input>
      <input appearance="h1 yellow" ref="/adapted_workflow/module_review/signs_and_symptoms_head">
        <label ref="jr:itext('/adapted_workflow/module_review/signs_and_symptoms_head:label')"/>
      </input>
      <input appearance="li" ref="/adapted_workflow/module_review/symptom_1">
        <label ref="jr:itext('/adapted_workflow/module_review/symptom_1:label')"/>
      </input>
      <input appearance="li" ref="/adapted_workflow/module_review/symptom_2">
        <label ref="jr:itext('/adapted_workflow/module_review/symptom_2:label')"/>
      </input>
      <input appearance="li" ref="/adapted_workflow/module_review/malnourished">
        <label ref="jr:itext('/adapted_workflow/module_review/malnourished:label')"/>
      </input>
      <input appearance="h1 red" ref="/adapted_workflow/module_review/refer_to_facility">
        <label ref="jr:itext('/adapted_workflow/module_review/refer_to_facility:label')"/>
      </input>
      <input appearance="h1 green" ref="/adapted_workflow/module_review/follow_up_header">
        <label ref="jr:itext('/adapted_workflow/module_review/follow_up_header:label')"/>
      </input>
      <input ref="/adapted_workflow/module_review/follow_up_note">
        <label ref="jr:itext('/adapted_workflow/module_review/follow_up_note:label')"/>
      </input>
