      </itext>
      <instance>
        <scdsc_investigation delimiter="#" id="scdsc_investigation" prefix="J1!scdsc_investigation!" version="2019-09-05">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <id_signal/>
          </inputs>
          <patient_id/>
          <signal_id/>
          <scdsc_investigation>
            <signal_id_reminder/>
            <signal_investigated/>
            <cause/>
            <signs_reported/>
            <signs_others/>
            <travel_history/>
            <contact_covid_case/>
            <phone_number/>
            <labs_sample/>
            <no_people_exposed/>
            <no_suspected_cases/>
            <no_human_cases_hospitalized/>
            <no_human_deaths/>
            <event_risk_classificaiton/>
            <response_recommedations/>
          </scdsc_investigation>
          <summary>
            <s_details/>
            <s_details_signal_id_start/>
            <s_investigation/>
            <s_investigation_exposed/>
            <s_investigation_suspected/>
            <s_investigation_deaths/>
            <s_investigation_hospitalized/>
            <s_investigation_risk/>
            <s_followup/>
            <s_followup_note_1/>
            <s_followup_note_2/>
          </summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </scdsc_investigation>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/scdsc_investigation/inputs" relevant="0"/>
      <bind nodeset="/scdsc_investigation/inputs/id_signal" type="string"/>
      <bind calculate=" /scdsc_investigation/inputs/id_signal " nodeset="/scdsc_investigation/patient_id" type="string"/>
      <bind calculate=" /scdsc_investigation/inputs/id_signal " constraint="regex(.,'^[0-9]{5,13}$')" jr:constraintMsg="The signal ID should be a 5 to 13 digit number. Kindly enter a valid signal ID." nodeset="/scdsc_investigation/signal_id" required="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation" required="true()"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/signal_id_reminder" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/signal_investigated" required="true()" type="select1"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/cause" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/signs_reported" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="select"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/signs_others" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes' and  /scdsc_investigation/scdsc_investigation/signs_reported  = 'other'" required="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/travel_history" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/contact_covid_case" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/phone_number" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes' and ( /scdsc_investigation/scdsc_investigation/signs_reported  or ( /scdsc_investigation/scdsc_investigation/contact_covid_case ='yes' or  /scdsc_investigation/scdsc_investigation/travel_history  ='yes'))" required="true()" type="tel"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/labs_sample" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/no_people_exposed" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="int"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/no_suspected_cases" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="int"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/no_human_cases_hospitalized" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="int"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/no_human_deaths" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="int"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/event_risk_classificaiton" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/scdsc_investigation/response_recommedations" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" required="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_details" readonly="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_details_signal_id_start" readonly="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_investigation" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_investigation_exposed" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_investigation_suspected" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_investigation_deaths" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_investigation_hospitalized" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_investigation_risk" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_followup" readonly="true()" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_followup_note_1" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'no'" type="string"/>
      <bind nodeset="/scdsc_investigation/summary/s_followup_note_2" readonly="true()" relevant=" /scdsc_investigation/scdsc_investigation/signal_investigated  = 'yes'" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/scdsc_investigation/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/scdsc_investigation/inputs">
      <input appearance="hidden" ref="/scdsc_investigation/inputs/id_signal"/>
    </group>
    <group appearance="field-list" ref="/scdsc_investigation/scdsc_investigation">
      <label ref="jr:itext('/scdsc_investigation/scdsc_investigation:label')"/>
      <input ref="/scdsc_investigation/scdsc_investigation/signal_id_reminder">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/signal_id_reminder:label')"/>
      </input>
      <select1 ref="/scdsc_investigation/scdsc_investigation/signal_investigated">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/signal_investigated:label')"/>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/scdsc_investigation/scdsc_investigation/cause">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/cause:label')"/>
      </input>
      <select ref="/scdsc_investigation/scdsc_investigation/signs_reported">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/signs_reported:label')"/>
        <hint>select all that apply</hint>
        <item>
          <label>Fever</label>
          <value>fever</value>
        </item>
        <item>
          <label>Cough</label>
          <value>cough</value>
        </item>
        <item>
          <label>Difficult in breathing</label>
          <value>breathing</value>
        </item>
        <item>
          <label>Diarrhoea</label>
          <value>diarrhoea</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
      </select>
      <input ref="/scdsc_investigation/scdsc_investigation/signs_others">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/signs_others:label')"/>
      </input>
      <select1 ref="/scdsc_investigation/scdsc_investigation/travel_history">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/travel_history:label')"/>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/scdsc_investigation/scdsc_investigation/contact_covid_case">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/contact_covid_case:label')"/>
        <hint ref="jr:itext('/scdsc_investigation/scdsc_investigation/contact_covid_case:hint')"/>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/scdsc_investigation/scdsc_investigation/phone_number">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/phone_number:label')"/>
      </input>
      <select1 ref="/scdsc_investigation/scdsc_investigation/labs_sample">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/labs_sample:label')"/>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/scdsc_investigation/scdsc_investigation/no_people_exposed">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/no_people_exposed:label')"/>
      </input>
      <input ref="/scdsc_investigation/scdsc_investigation/no_suspected_cases">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/no_suspected_cases:label')"/>
      </input>
      <input ref="/scdsc_investigation/scdsc_investigation/no_human_cases_hospitalized">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/no_human_cases_hospitalized:label')"/>
      </input>
      <input ref="/scdsc_investigation/scdsc_investigation/no_human_deaths">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/no_human_deaths:label')"/>
      </input>
      <input ref="/scdsc_investigation/scdsc_investigation/event_risk_classificaiton">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/event_risk_classificaiton:label')"/>
      </input>
      <input ref="/scdsc_investigation/scdsc_investigation/response_recommedations">
        <label ref="jr:itext('/scdsc_investigation/scdsc_investigation/response_recommedations:label')"/>
      </input>
    </group>
    <group appearance="field-list summary" ref="/scdsc_investigation/summary">
      <input appearance="h1 yellow" ref="/scdsc_investigation/summary/s_details">
        <label ref="jr:itext('/scdsc_investigation/summary/s_details:label')"/>
      </input>
      <input ref="/scdsc_investigation/summary/s_details_signal_id_start">
        <label ref="jr:itext('/scdsc_investigation/summary/s_details_signal_id_start:label')"/>
      </input>
      <input appearance="h1 blue" ref="/scdsc_investigation/summary/s_investigation">
        <label ref="jr:itext('/scdsc_investigation/summary/s_investigation:label')"/>
      </input>
      <input ref="/scdsc_investigation/summary/s_investigation_exposed">
        <label ref="jr:itext('/scdsc_investigation/summary/s_investigation_exposed:label')"/>
      </input>
      <input ref="/scdsc_investigation/summary/s_investigation_suspected">
        <label ref="jr:itext('/scdsc_investigation/summary/s_investigation_suspected:label')"/>
      </input>
      <input ref="/scdsc_investigation/summary/s_investigation_deaths">
        <label ref="jr:itext('/scdsc_investigation/summary/s_investigation_deaths:label')"/>
      </input>
      <input ref="/scdsc_investigation/summary/s_investigation_hospitalized">
        <label ref="jr:itext('/scdsc_investigation/summary/s_investigation_hospitalized:label')"/>
